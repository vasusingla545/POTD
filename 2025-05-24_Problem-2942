
// LeetCode POTD - 2025-05-24
// Problem: 2942. Find Words Containing Character
// Link: https://leetcode.com/problems/find-words-containing-character/?envType=daily-question&envId=2025-05-24
// Language: C++

class Solution {
public:
    vector<int> findWordsContaining(vector<string>& words, char x) {
        vector<int>ans;

        for(int i=0;i<words.size();i++){
            if(words[i].find(x)!=-1)ans.push_back(i);
        }
        return ans;
    }
};
